<% if current_user.already_liked?(@post) %>
  <%= button_to 'いいねを取り消す', post_like_path(@post), method: :delete, remote: true %>
<% else %>
  <%= button_to 'いいね', post_likes_path(@post), remote: true %>
<% end %>
<h4>いいねしたユーザー</h4>
<% @post.liked_users.each do |user| %>
  <li><%= user.email %></li>
<% end %>